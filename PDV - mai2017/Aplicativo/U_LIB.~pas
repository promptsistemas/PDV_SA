  eForeignKey = 9733;

  {Constantes para utilizacao da funcao Extenso}
  Centenas: array[1..9] of string[12]=('CEM','DUZENTOS','TREZENTOS','QUATROCENTOS',
                                       'QUINHENTOS','SEISCENTOS','SETECENTOS',
